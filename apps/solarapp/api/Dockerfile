# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build solarapi`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t solarapi`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system solarapi && \
          adduser --system -G solarapi solarapi

COPY dist/apps/solarapp/api solarapi
RUN chown -R solarapi:solarapi .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix solarapi --omit=dev -f install

CMD [ "node", "solarapi" ]
